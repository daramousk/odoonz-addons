<?xml version="1.0" ?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field
      name="name"
    >view.res.partner.form (in account_reconciliation_not_stupid)</field>
        <field name="model">res.partner</field>
        <field name="priority">5</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='name']" position="before">
                    <field name="customer_rank" invisible="1" />
                    <field name="supplier_rank" invisible="1" />
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button
            class="oe_stat_button o_res_partner_tip_opp"
            attrs="{'invisible': [('customer_rank', '=', 0)]}"
            name="open_payment_matching_screen"
            string="Customer Reconcile"
            type="object"
            icon="fa-university"
            groups="account.group_account_invoice"
            context="{'mode': 'customers'}"
          />
                    <button
            class="oe_stat_button o_res_partner_tip_opp"
            attrs="{'invisible': [('supplier_rank', '=', 0)]}"
            name="open_payment_matching_screen"
            string="Supplier Reconcile"
            type="object"
            icon="fa-university"
            groups="account.group_account_invoice"
            context="{'mode': 'suppliers'}"
          />
                </xpath>
            </data>
        </field>
    </record>
</odoo>
