        <field name="model">account.journal</field>
        <field
      name="inherit_id"
      ref="account_accountant.account_journal_dashboard_kanban_view"
    />
        <field name="arch" type="xml">
            <xpath
        expr="//a[@name='action_open_reconcile']"
        position="attributes"
      >
                <attribute
          name="groups"
        >account.group_account_invoice</attribute>
            </xpath>
            <xpath
        expr="//button[@name='action_open_reconcile']"
        position="attributes"
      >
                <attribute
          name="groups"
        >account.group_account_invoice</attribute>
            </xpath>
        </field>
    </record>
</odoo>
